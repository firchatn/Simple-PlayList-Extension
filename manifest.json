
{

  "manifest_version": 2,
  "name": "Play List",
  "version": "1.0",

  "description": "Play List player from youtube",

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["*://youtube.com/watch?v=*"],
      "js": ["playlist.js"]
    }
  ],
"browser_action": {
  "default_icon": {
    "19": "icons/icon.png",
    "38": "icons/icon.png"
  },
  "default_title": "Play",
  "default_popup": "popup/info.html"
},
  "permissions": [
    "storage"
  ]



}
