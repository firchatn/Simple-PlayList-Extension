
{

  "manifest_version": 2,
  "name": "Password Manager",
  "version": "1.0",

  "description": "Save all password puted in your firefox navigator.",

  "icons": {
    "48": "icons/pass.png"
  },

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["playlist.js"]
    }
  ],
"browser_action": {
  "default_icon": {
    "19": "icons/pass.png",
    "38": "icons/pass.png"
  },
  "default_title": "Auto Password",
  "default_popup": "popup/info.html"
}

}
